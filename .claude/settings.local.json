{
  "permissions": {
    "allow": [
      "Bash(python3:*)",
      "mcp__filesystem__list_directory",
      "Bash(rustc:*)",
      "Bash(cargo --version:*)",
      "mcp__github__get_file_contents",
      "mcp__serena__list_dir",
      "Bash(cargo check:*)",
      "Bash(cargo test:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "mcp__git__git_branch",
      "mcp__git__git_status",
      "mcp__github__list_pull_requests",
      "mcp__git__git_log",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git branch:*)",
      "mcp__github__search_code",
      "mcp__serena__list_memories",
      "Bash(chmod:*)",
      "Bash(/workspaces/s3rm-rs/.claude/hooks/spec-context-reminder.sh)",
      "Bash(/workspaces/s3rm-rs/.claude/hooks/task-completion-check.sh:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "serena",
    "filesystem",
    "git"
  ],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/spec-context-reminder.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/task-completion-check.sh",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  }
}
