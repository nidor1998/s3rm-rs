{
  "permissions": {
    "allow": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "serena",
    "filesystem",
    "git"
  ],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/spec-context-reminder.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/task-completion-check.sh",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  }
}
