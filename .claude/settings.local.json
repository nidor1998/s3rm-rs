      "mcp__serena__find_symbol",
      "Bash(gh api:*)",
      "Bash(git -C /workspaces/s3rm-rs remote get-url:*)",
      "Bash(find:*)",
      "Bash(gh pr create:*)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "mcp__context7__resolve-library-id",
      "WebSearch",
      "Bash(git mv:*)",
      "Bash(grep:*)",
      "Bash(cargo doc:*)",
      "mcp__github__list_issues",
      "mcp__github__get_label",
      "Bash(git -C /workspaces/s3rm-rs branch --show-current)",
      "mcp__github__pull_request_read",
      "mcp__github__update_pull_request",
      "mcp__github__issue_read",
      "mcp__git__git_create_branch",
      "mcp__git__git_checkout",
      "mcp__git__git_add",
      "mcp__git__git_commit",
      "Bash(gh pr view:*)",
      "Bash(ls:*)",
      "WebFetch(domain:github.com)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "serena",
    "filesystem",
    "git"
  ],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/spec-context-reminder.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/task-completion-check.sh",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  }
}
